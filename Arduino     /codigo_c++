#include <Servo.h>
//codigo para calibrar los dedos
//dedos de la mano
Servo pulgar; //pin 1
Servo indice; //pin 2
Servo dedomedio; //pin3
Servo anular; //pin 4
Servo menique;  //pin 5
Servo palma;
 
void setup() {
  palma.attach(0);
  pulgar.attach(1);
  indice.attach(2);
  dedomedio.attach(3);
  anular.attach(4);
  menique.attach(5);
 
}
 
void loop() {
 
  pulgar.write(0);
  indice.write(0); // Mueve servo2 a 180 para que gire en la misma direcci贸n visual
  dedomedio.write(0);
  anular.write(0);
  menique.write(0);
delay(5000);
 
  for(int posicion=0; posicion<=90; posicion++){
    menique.write(posicion);
    anular.write(posicion);
    delay(30);
  }
  delay(200);
for(int posicion=0; posicion<30; posicion++){
  indice.write(posicion);
  delay(30);
}
delay(200);
for(int posicion=90; posicion>0; posicion--){
  palma.write(posicion);
  delay(30);
}
delay(5000);
 
 
for(int posicion=0; posicion<90; posicion++){
  palma.write(posicion);
  delay(30);
}
delay(200);
 
for(int posicion=90; posicion>0; posicion--){
    menique.write(posicion);
    anular.write(posicion);
    delay(30);
  }
  delay(200);
for(int posicion=30; posicion>0; posicion--){
  indice.write(posicion);
  delay(30);
}
delay(200);



//movimiento de gatoo
pulgar.write(0);
  indice.write(0); // Mueve servo2 a 180 para que gire en la misma direcci贸n visual
  dedomedio.write(0);
  anular.write(0);
  menique.write(0);
  rotaciona.write(0);
 
  for(int posicion=0; posicion<90; posicion++){
  rotaciona.write(posicion);
  delay(30);
 
  }
 
   delay(3000);
 
  for (int posicion = 0; posicion <= 90; posicion++) {
    brazo1.write(posicion);
    brazo2.write(180 - posicion); // Invertir el movimiento de servo2
    delay(30);
  }
 
   delay(3000);
 
  for(int posicion=0; posicion<=90; posicion++){
    dedomedio.write(posicion);
    anular.write(posicion);
    menique.write(posicion);
    delay(30);
  }
  delay(200);
 
  for(int posicion=30; posicion>0; posicion--){
  rotaciona.write(posicion);
  delay(30);
 
  }
 
  delay(200);
 
 
  for (int posicion = 90; posicion >0; posicion--) {
    brazo1.write(posicion);
    brazo2.write(180 - posicion); // Invertir el movimiento de servo2
    delay(30);
  }
 
  delay(3000);
 
 
 for(int posicion=90; posicion>0; posicion--){
    dedomedio.write(posicion);
    anular.write(posicion);
    menique.write(posicion);
    delay(30);
  }
  delay(200);
 
 
 //oso 
pulgar.attach(1);
  indice.attach(2);
  dedomedio.attach(3);
  anular.attach(4);
  menique.attach(5);
 
  //sube baja brazo
  brazo1.attach(9);
  brazo2.attach(10);
 
 //mivimiento de la ultima rotacion
 rotaciona.attach(11);
}
 
